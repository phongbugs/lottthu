{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",  
    "models/**/*.ts", 
    "migrations/**/*.ts",
    "seeders/**/*.ts" 
    ],
  "exclude": ["node_modules", "dist"]
}
